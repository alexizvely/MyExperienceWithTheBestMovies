<Page loaded="pageLoaded">
    <StackLayout>
       <ListView items="{{ moviesList }}" itemTap="onItemTap">
			<ListView.itemTemplate>
				<GridLayout id="cell" columns = "90, *, *, 100" rows = "50, 25, 25" >
					<Image src="{{image}}" stretch="aspectFill" col = "0" row = "0" rowspan = "3"/>
					<Label id="title" text="{{ title }}" textWrap = "true" col = "1" row = "0" colSpan="2"  />
					<Label id="year" text="{{'Year: '+ year }}" col = "1" row = "1" />
					<Label id="imdb" text="{{'Rating: '+ imdbRating }}" col = "2" row = "1" />
					<Label id="director" text="{{'Director: '+ director }}" textWrap = "true" col = "1" row = "2" colSpan="2" />
					<Button id="watched" text="Not watched" col = "3" row = "0" rowspan = "3" />
				</GridLayout>
			</ListView.itemTemplate>
		</ListView>
    </StackLayout>
</Page>

