<Page loaded="pageLoaded">
    <StackLayout>
       <ListView items="{{ moviesList }}" itemTap="onItemTap">
			<ListView.itemTemplate>
				<StackLayout orientation="horizontal"  >
					<Image  src="{{img}}" />
					<StackLayout orientation="vertical" >
						<Label id="name" text="{{name}}" />
						<Label id="year" text="{{ year }}" />
						<Label id="director" text="{{ director }}" />
					</StackLayout>
					<Label id="watched" text="Not watched" />
				</StackLayout>
			</ListView.itemTemplate>
		</ListView>
    </StackLayout>
</Page>


